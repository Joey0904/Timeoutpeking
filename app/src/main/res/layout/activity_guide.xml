<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_guide_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>


    <Button
        android:id="@+id/bt_guid_expr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dip"
        android:background="@drawable/bt_bg_selector"
        android:padding="10dp"
        android:text="开始体验"
        android:textColor="@color/bt_text_selector"
        android:textSize="22sp"
        android:visibility="gone"/>

    <!-- 点的容器 -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip">

        <LinearLayout
            android:id="@+id/ll_guid_graypoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <View
            android:id="@+id/v_guid_redpoint"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="@drawable/v_point_red">
        </View>
    </FrameLayout>

</RelativeLayout>